{
    "root": true,
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "next/core-web-vitals",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": ["@typescript-eslint"],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",    // <-- important: ignore arguments starting with "_"
          "varsIgnorePattern": "^_"     // <-- also ignore variables starting with "_"
        }
      ],
      "no-unused-vars": "off",            // disable base eslint unused-vars
      "react/react-in-jsx-scope": "off",
      "no-console": "warn"
    }
  }
  